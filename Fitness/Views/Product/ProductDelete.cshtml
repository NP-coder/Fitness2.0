@model Fitness.Models.Product

<form method="post" asp-action="ProductDeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Видалити продукт</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Proteines"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Fats"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Carbohydrates"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Calories"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Proteines" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Fats" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Carbohydrates" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Calories" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Видалити" />
                        </div>
                        <div class="col">
                            <a asp-action="ProductIndex" class="btn btn-success w-75">Повернутись</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
