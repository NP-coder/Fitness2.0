@model Fitness.Models.Product

<form method="post" asp-action="ProductCreate">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-2">Додати продукт</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Proteines"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Fats"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Carbohydrates"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Calories"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Proteines" class="form-control" />
                        <span asp-validation-for="Proteines" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Fats" class="form-control" />
                        <span asp-validation-for="Fats" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Carbohydrates" class="form-control" />
                        <span asp-validation-for="Carbohydrates" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Calories" class="form-control" />
                        <span asp-validation-for="Calories" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Додати" />
                        </div>
                        <div class="col">
                            <a asp-action="ProductIndex" class="btn btn-danger w-75">Повернутися</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

