@model Fitness.Models.Athletics

<form method="post" asp-action="AthleticsCreate">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Додати тренування</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label>Користувач</label>
                    </div>
                    <div class="col-3">
                        <label asp-for="ExerciseId"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Duration"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Timeofday"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label>@User.Identity.Name</label>
                    </div>
                    <div class="col-3">
                        <select asp-for="ExerciseId" asp-items="@ViewBag.AthleticsDropDown" class="form-control"></select>
                        <span asp-validation-for="ExerciseId" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>

                    </div>
                    <div class="col-3">
                        <input asp-for="Timeofday" class="form-control" />
                        <span asp-validation-for="Timeofday" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Додати" />
                        </div>
                        <div class="col">
                            <a asp-action="AthleticsIndex" class="btn btn-danger w-75">Повернутися</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

